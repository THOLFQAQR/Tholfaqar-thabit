<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ajouter"
    android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="#726F85"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textColor="#fff"
            android:text="Ville :"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtville"
            android:textColor="#fff"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textColor="#fff"
            android:text="Pays :"
            android:textSize="20dp"/>

        <Spinner
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:id="@+id/sp"
            android:tooltipText="@string/spp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:textColor="#fff"
            android:text="Temprature :"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/tempratur"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:text="CÂ°"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:textColor="#fff"
            android:text="Porsentage :"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/porsentage"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:text="%"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="362dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="#B0DCBA"
        android:orientation="vertical"

        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2392C5"
            android:textSize="20dp"
            android:text="Enregistre"
            android:id="@+id/btnenr"
            android:layout_margin="20dp"
            android:textColor="#fff"
            android:onClick="enregistre"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2392C5"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:text="Effacer"
            android:id="@+id/btneff"
            android:textColor="#fff"
            android:onClick="effacer"/>


    </LinearLayout>


</LinearLayout>